<form>
  <div class="form-row mt-4">
    <div class="form-group col-md-6">
      <label for="inputEmail4">Nome</label>
      <input type="email" class="form-control" id="inputEmail4" placeholder="Nome">
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">Sobrenome</label>
      <input class="form-control" id="inputPassword4" placeholder="Sobrenome">
    </div>
  </div>
  <div class="form-group">
    <label for="inputAddress">E-mail</label>
    <input type="text" class="form-control" id="inputAddress" placeholder="email@exemplo.com">
  </div>
  <div class="form-group">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" id="gridCheck">
      <label class="form-check-label" for="gridCheck">
        Check me out
      </label>
    </div>
    <%= @user.email %>
  </div>
  <button type="submit" class="btn btn-primary">Enviar</button>
</form>