<br>
<h1>Lista Questões</h1>
<hr/>
<br>
<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Descrição</th>
      <th scope="col">Assunto</th>
      <th scope="col">
        <%= link_to new_admins_backoffice_question_path	, class:"btn btn-success" do %>
          +
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody> 
  <% @questions.each do |question| %>
    <tr>
      <th scope="row"><%=question.id%></th>
      <td><%=question.description.truncate(60)%></td>
      <td><%=question.subject.description.truncate(30)%></td>
      <td>
      <%= link_to edit_admins_backoffice_question_path(question), class:"btn btn-warning" do %>
        Editar
      <% end %>
      </td>
      <td>
      <%= link_to admins_backoffice_question_path(question.id), method: :delete, class:"btn btn-danger", data: {confirm: "Deseja realmente excluir essa questão?"} do %>
        Excluir
      <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<div class="d-flex justify-content-center mt-5">
  <%= paginate @questions %>
</div>