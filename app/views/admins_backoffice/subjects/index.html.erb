<br>
<h1>Lista Assuntos</h1>
<hr/>
<br>
<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Descrição</th>
      <th scope="col">
        <%= link_to new_admins_backoffice_subject_path	, class:"btn btn-success" do %>
          +
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody> 
  <% @subjects.each do |subject| %>
    <tr>
      <th scope="row"><%=subject.id%></th>
      <td><%=subject.description%></td>
      <td>
      <%= link_to edit_admins_backoffice_subject_path(subject), class:"btn btn-warning" do %>
        Editar
      <% end %>
      </td>
      <td>
      <%= link_to admins_backoffice_subject_path(subject.id), method: :delete, class:"btn btn-danger", data: {confirm: "Deseja realmente esse assunto?"} do %>
        Excluir
      <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<div class="d-flex justify-content-center mt-5">
  <%= paginate @subjects %>
</div>